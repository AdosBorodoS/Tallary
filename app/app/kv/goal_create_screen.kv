            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(12)

                # -------- TITLE CARD --------
                BoxLayout:
                    orientation: "vertical"
                    padding: dp(14)
                    spacing: dp(10)
                    size_hint_y: None
                    height: self.minimum_height
                    canvas.before:
                        Color:
                            rgba: 0.10, 0.10, 0.10, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
