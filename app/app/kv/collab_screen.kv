<CollabScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing: 12

            Label:
                text: "Совместные"
                size_hint_y: None
                height: 40

            Label:
                text: "Пока пусто"
                size_hint_y: None
                height: 30

            Widget:

        BoxLayout:
            size_hint_y: None
            height: 64
            padding: 8, 8
            spacing: 8
            canvas.before:
                Color:
                    rgba: 0.08, 0.08, 0.08, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                id: navDashboard
                text: "Дашборд"
                on_press: root.on_nav_click("home")

            Button:
                id: navAnalytics
                text: "Аналитика"
                on_press: root.on_nav_click("analytics")

            Button:
                id: navCollab
                text: "Совместные"
                on_press: root.on_nav_click("collab")
